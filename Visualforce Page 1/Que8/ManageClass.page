<apex:page controller="ManageClassController" >
    <apex:form >
        <apex:pageBlock title="{!$Label.Class_List}" id="classList">
            <apex:pageBlockTable value="{!classes}" var="class">
                <apex:column >
                    <apex:commandLink action="{!setSelectedClass }" reRender="edit_details">
                        <apex:param name="edit_id" value="{!class.Id}" assignTo="{!classID}"/>
                        {!$Label.Edit}
                    </apex:commandLink>
                </apex:column>
                <apex:column >
                    <apex:commandLink action="{!deleteSelectedClass}" reRender="classList">
                        <apex:param name="delete_id" value="{!class.Id}" assignTo="{!classID}"/>
                        {!$Label.Delete}
                    </apex:commandLink>
                </apex:column>
                <apex:column value="{!class.Name}"/>
                <apex:column value="{!class.Fee__c}"/>
                <apex:column value="{!class.Board__c}"/>
                <apex:column value="{!class.Max_Size__c}"/>
                <apex:column value="{!class.Class_Teacher__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
        
        <apex:pageBlock id="edit_details" >
            <apex:pageBlockSection columns="1" rendered="{!showEdit}">
                <apex:inputField value="{!selectedClass.Name}" />
                <apex:inputField value="{!selectedClass.Fee__c}" />
                <apex:inputField value="{!selectedClass.Board__c}" />
                <apex:inputField value="{!selectedClass.Max_Size__c}" />
                <apex:inputField value="{!selectedClass.Class_Teacher__c}" />
            </apex:pageBlockSection>
            <apex:pageBlockButtons rendered="{!showEdit}">
                <apex:commandButton value="{!$Label.Save}" action="{!saveChanges}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>